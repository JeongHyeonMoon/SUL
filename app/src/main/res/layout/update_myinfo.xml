<?xml version="1.0" encoding="UTF-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f09ba0"
    android:orientation="vertical">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingRight="5px">

            <TextView
                android:id="@+id/u0_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f5797a"
                android:text="ID" />

            <EditText
                android:id="@+id/u_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp" />

            <TextView
                android:id="@+id/u0_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f5797a"
                android:text="Name" />

            <EditText
                android:id="@+id/u_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp" />

            <TextView
                android:id="@+id/u0_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f5797a"
                android:text="password" />

            <EditText
                android:id="@+id/u_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:ems="10"
                android:hint="비밀번호 수정"
                android:inputType="textPassword" />

            <TextView
                android:id="@+id/u0_adrss"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f5797a"
                android:text="address" />


            <EditText
                android:id="@+id/u_adrss"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="0.62" />


            <TextView
                android:id="@+id/u0_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f5797a"
                android:text="전화번호" />

            <EditText
                android:id="@+id/u_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="전화번호 수정" />

            <Button
                android:id="@+id/btnupdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                android:background="#ffebee"
                android:text="수정" />
        </LinearLayout>

    </ScrollView>
</LinearLayout>